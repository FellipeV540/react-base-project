body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}

header {
    background-color: #333;
    color: white;
    padding: 10px 0;
}

nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
}

nav h1 {
    margin: 0;
}

nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
}

nav ul li {
    margin: 0 10px;
}

nav ul li a {
    color: white;
    text-decoration: none;
}

.services, .dashboard {
    padding: 20px;
    background-color: white;
    margin: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.services h2, .dashboard h2 {
    margin-top: 0;
}

.service, .stat {
    margin-bottom: 20px;
}

.stat {
    background-color: #e0e0e0;
    padding: 10px;
    border-radius: 8px;
}

.stat h3 {
    margin: 0;
}

.stat p {
    font-size: 1.5em;
    margin: 5px 0 0;
}